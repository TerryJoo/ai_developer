# Server Configuration
PORT=8000
HOST=localhost
ENV=development

# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here
GITHUB_APP_ID=your_github_app_id
GITHUB_APP_PRIVATE_KEY=your_private_key_here
GITHUB_OWNER=your_github_username_or_org
GITHUB_REPO=your_repo_name

# AI Provider Configuration
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=4096
ANTHROPIC_TEMPERATURE=0.7

# AI Provider Selection (openai, anthropic, multi)
AI_PROVIDER=openai

# Database Configuration
# SQLite
SQLITE_PATH=./data/automation.db
SQLITE_WAL_MODE=true

# Redis (for job queue and caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_RETRY_ATTEMPTS=3
REDIS_RETRY_DELAY=1000

# Job Queue Configuration
QUEUE_NAME=ai-developer-tasks
QUEUE_MAX_JOBS=1000
QUEUE_CONCURRENCY=5
QUEUE_RETRY_ATTEMPTS=3
QUEUE_RETRY_DELAY=60000
QUEUE_JOB_TIMEOUT=600000

# Worker Configuration
WORKER_POOL_SIZE=3
WORKER_MAX_JOBS_PER_WORKER=10

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_ENABLED=true

# Security
WEBHOOK_SIGNATURE_ALGORITHM=sha256
API_KEY_REQUIRED=false
API_KEY=your_api_key_here
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
ENABLE_HELMET=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5
LOG_ROTATION=daily

# Metrics & Analytics
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# AI Cost Tracking
COST_TRACKING_ENABLED=true
COST_ALERT_THRESHOLD=100.00
COST_BUDGET_MONTHLY=1000.00

# AI Response Caching
AI_CACHE_ENABLED=true
AI_CACHE_TTL=3600
AI_CACHE_MAX_SIZE=1000

# Workflow Configuration
WORKFLOW_TIMEOUT=900000
WORKFLOW_MAX_RETRIES=2
WORKFLOW_AUTO_MERGE=false
WORKFLOW_REQUIRE_TESTS=true

# Dashboard Configuration
DASHBOARD_ENABLED=true
DASHBOARD_PORT=3000
DASHBOARD_AUTH_ENABLED=false
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=changeme

# Notification Configuration
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM=noreply@example.com
EMAIL_TO=admin@example.com

# Performance Tuning
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT=30000
BODY_PARSER_LIMIT=10mb

# Development
DEBUG=false
VERBOSE_LOGGING=false
DRY_RUN=false