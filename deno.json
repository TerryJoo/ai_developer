{
  "tasks": {
    "dev": "deno run --watch --allow-net --allow-env --allow-read --allow-write src/main.ts",
    "start": "deno run --allow-net --allow-env --allow-read --allow-write src/main.ts",
    "test": "deno test --allow-net --allow-env --allow-read",
    "test:auto": "./scripts/auto-test.sh",
    "check": "deno check src/**/*.ts",
    "fmt": "deno fmt",
    "lint": "deno lint"
  },
  "imports": {
    "@std/": "https://deno.land/std@0.224.0/",
    "@oak/oak": "https://deno.land/x/oak@v17.1.3/mod.ts",
    "@octokit/rest": "https://esm.sh/@octokit/rest@20.1.1",
    "@octokit/webhooks": "https://esm.sh/@octokit/webhooks@13.3.0"
  },
  "compilerOptions": {
    "strict": true,
    "useUnknownInCatchVariables": true,
    "noImplicitAny": true
  }
}